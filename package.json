{
  "name": "jploft",
  "version": "1.0.0",
  "description": "jploft TCP server ",
  "main": "dist/index.js",
  "author": "Jai Sharma <jaiprakash.sharma44@gmail.com>",
  "license": "MIT",
  "scripts": {
    "copy": "yarn run cpy '.env.example' '.' --rename=.env --no-overwrite ",
    "clean": "rimraf dist",
    "pretty": "prettier ./dist/*.js ./src/*.ts ./src/**/*.ts ./src/**/**/*.ts ./src/**/**/**/*.ts ./src/**/**/**/**/*.ts  --color --write",
    "build:babel": "NODE_ENV=production babel src --out-dir dist --extensions .ts --source-maps inline",
    "build": "yarn run clean && yarn run build:babel",
    "start": "yarn run build && node dist/index.js",
    "dev": " yarn run copy && NODE_ENV=development nodemon --watch src -e ts --exec ts-node ./src/index.ts"
  },
  "dependencies": {
    "json-socket": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "cpy": "^8.1.0",
    "cpy-cli": "^3.1.1",
    "dotenv": "^8.2.0",
    "eslint": "^7.5.0",
    "husky": "^4.2.5",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  }
}
